  function f() {
         let matHrenb=prompt("который принимает математическое выражение");
         alert(eval(matHrenb))
     }
     try {
         f()
     }catch (e) {
         document.onerror=alert("При ошибке нужно выводить сообщение и просить переввести выражение.")
         f()
     }
     ///window.onerror=alert("Ну типо я alert да ?")
