let who=prompt("Кто там?")
    let text
    if (who===''||who===null) {
        text="Отменено"
    }else if (who==='Админ'){
        let pass=prompt("пароль?");
        if (pass===''||pass===null){
            text="Отменено"
        }else if (pass==="Я главный"){
            text="Здравствуйте!"
        }else{
            text="Неверный пароль"
        }
    }else{
        text="Я вас не знаю"
    }
    alert(text)

